<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col my-3">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Faça login ou cadastre-se</p>

            <%- include('includes/messages') %>

            <div class="row text-center">

                <div class="col-lg my-3">
                    <h4>Faça seu cadastro</h4>
                    <p>Se ainda não tem cadastro, preencha os dados abaixo</p>
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                          <label>Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Criar senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>
                </div>

                <div class="col-lg my-3">
                    <h4>Login</h4>
                    <p >Se já possui seu cadastro, preencha os dados abaixo</p>
                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                        <div class="form-group">
                          <label>Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Acessar</button>
                      </form>

            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>

</div>

<%- include('includes/footer') %>